<div class="jumbotron bg-transparent">
  <h1 class="display-4 text-warning">Welcome to the BURGER LOUNGE!</h1>

  <div class="container-fluid bg-warning rounded-circle">
    <div class="row">
      <div class="col col-lg-4">
        <div class="card-body border border-success rounded">
        <h2>CREATE YOUR BURGER HERE!!</h2>
        <form class="create-form" action="/api/burgers" method="POST">

          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input required type="text" id="ca" name="burger_name">
          </div>

          <div class="form-group">
            <label for="slee">Hungry?</label><br>
            <input type="radio" name="devoured" value="1" checked> Just Create IT!<br>
            <input type="radio" name="devoured" value="0"> COOK IT!
          </div>

          <button class="btn btn-success btn-lg" type="submit">Add Burger!</button>
        </form>
        </div>
      </div>
      <div class="col col-lg-4">
        <div class="card-body">
          <h2>ORDER YOUR BURGER HERE!!</h2>
          <ul>
            {{#each burgers}}
              {{#if devoured}}
                {{> burger-block eat=false}}
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
      <div class="col col-lg-4">
        <div class="card-body">
          <h2>DEVOUR YOUR BURGER HERE!!</h2>
          <ul>
            {{#each burgers}}
              {{#unless devoured}}
                {{> burger-block eat=true}}
              {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
